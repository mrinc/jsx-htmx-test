{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "es2021",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./lib",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "linterOptions": {
    "exclude": ["src/plugins/-*/**/*.*"]
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": [
    "node_modules/**",
    "src/plugins/*-test/**/*.*",
    "src/plugins/-*/**/*.*"
  ]
}
